{
  "private": true,
  "type": "module",
  "scripts": {
    "build": "NODE_ENV=production bun run build:exec ./src/index.ts",
    "build:exec": "NODE_ENV=production bun --env-file=./.env.production.local build --bytecode --minify --outdir ./dist --target bun",
    "build:optimization": "NODE_ENV=production bun run ts-optimization && bun run build:exec ./dist/index.cjs",
    "compile": "NODE_ENV=production bun run compile:exec ./src/index.ts",
    "compile:exec": "NODE_ENV=production bun --env-file=./.env.production.local build --bytecode --compile --minify --outfile ./dist/index --target bun",
    "compile:optimization": "NODE_ENV=production bun run ts-optimization && bun run compile:exec ./dist/index.cjs",
    "dev": "NODE_ENV=development bun --env-file=./.env.development.local --watch run ./src/index.ts",
    "ts-optimization": "NODE_ENV=production ts-project-builder ./src/index.ts -f cjs --clean --minify",
    "type-check": "tsc"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.0.0",
    "@kikiutils/classes": "3.0.0",
    "@kikiutils/node": "4.3.0",
    "cheerio": "1.0.0",
    "cli-progress": "^3.12.0"
  },
  "devDependencies": {
    "@kikiutils/prettierrc": "^1.3.2",
    "@kikiutils/tsconfigs": "^3.0.1",
    "@types/bun": "^1.1.10",
    "@types/cli-progress": "^3.11.6",
    "ts-project-builder": "^3.0.1",
    "tslib": "^2.7.0",
    "typescript": "^5.6.2"
  },
  "prettier": "@kikiutils/prettierrc"
}
